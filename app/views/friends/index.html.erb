<div class='container'>
  <div class='row-fluid'>
    <div class='span9'>
      <h1>Friends</h1>
      <% @currently_friends.each do |currently_friend|%> 
        <p><strong><%= link_to currently_friend.name, user_path(currently_friend.slug) %>:</strong> "<%= currently_friend.latest_status_content %>" <%= time_ago( currently_friend.latest_status) %></p>
      <% end %>
    </div>
    <div class='span3'>  
      <div class='well sidebar-nav'>  
        <ul class='nav nav-list'>  
          <li class='nav-header'>Facebook Friends</li>  
          <li class='divider'></li>
          <% @facebook_friends.each do |facebook_friend| %>
            <li>
              <%= link_to facebook_friend.name, user_path(facebook_friend.slug) %>
              <%= form_for Connection.new do |f| %>
                <%= f.hidden_field :leader_id, value: facebook_friend.id %>
                <%= f.submit 'Follow', class: 'btn' %>
              <% end %>
            </li>
          <% end %>
        </ul>  
      </div> 
    </div>
  </div>
</div>